{
  "manifest_version": 3,
  "name": "Focus Detector",
  "version": "1.0",
  "description": "专注度检测与历史曲线",
  "permissions": ["storage", "activeTab", "sidePanel", "tabs"],
  "action": {
    "default_icon": "icon.png"
  },
  "side_panel": {
    "default_icon": "icon.png",
    "default_path": "sidebar.html",
    "default_title": "Focus Detector"
  },
  "web_accessible_resources": [
    {
      "resources": ["weights/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 