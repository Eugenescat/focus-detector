{
  "manifest_version": 3,
  "name": "Focus Detector",
  "version": "1.0",
  "description": "专注检测与历史曲线",
  "permissions": ["storage", "activeTab", "sidePanel"],
  "action": {
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidebar.html",
    "default_title": "专注检测"
  },
  "web_accessible_resources": [
    {
      "resources": ["weights/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 